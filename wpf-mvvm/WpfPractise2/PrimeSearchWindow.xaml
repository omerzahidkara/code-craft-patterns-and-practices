<Window x:Class="WpfPractise2.PrimeSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asal Arama" Height="560" Width="640" ResizeMode="CanResizeWithGrip">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- arama -->
            <RowDefinition Height="Auto"/>
            <!-- bilgi + en yakın -->
            <RowDefinition Height="*"/>
            <!-- paneller -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Arama alanı -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Sayı:" VerticalAlignment="Center"/>
            <TextBox Width="160" Margin="8,0,0,0"
                     Text="{Binding QueryText, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Ara" Margin="8,0,0,0" Command="{Binding SearchCommand}"/>
            <Button Content="İlk 99" Margin="8,0,0,0" Command="{Binding First99Command}"/>
            <Button Content="Temizle" Margin="8,0,0,0" Command="{Binding ClearCommand}"/>
        </StackPanel>

        <!-- Bilgi + en yakın -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,8,0,8">
            <TextBlock Text="{Binding InfoText}" Foreground="DarkSlateGray" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding NearestInfo}" FontWeight="SemiBold" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- İki panel: sol ÜSTTEKİLER, sağ ALTTAKİLER -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <!-- ayraç -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sol: ÜSTTEKİLER -->
            <GroupBox Header="Üsttekiler" Padding="6" Grid.Column="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding AbovePrimes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="14" Margin="2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>

            <!-- Sağ: ALTTAKİLER -->
            <GroupBox Header="Alttakiler" Padding="6" Grid.Column="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding BelowPrimes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="14" Margin="2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
