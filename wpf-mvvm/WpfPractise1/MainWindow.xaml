<Window x:Class="CounterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="2 Butonlu Sayaç" Width="300" Height="180">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Sayı gösterimi -->
        <TextBlock Text="{Binding Count}" FontSize="36" FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <!-- Butonlar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="–1" Width="80" Command="{Binding DecrementCommand}" Margin="0,0,16,0"/>
            <Button Content="+1" Width="80" Command="{Binding IncrementCommand}"/>
        </StackPanel>

    </Grid>
</Window>
